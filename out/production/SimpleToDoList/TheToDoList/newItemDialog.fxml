<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="TheToDoList.newItemController"
            >

    <headerText>
        Create a new Item.
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Title" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2" />
            <Label text="Description" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="descField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2" wrapText="true"/>
            <Label text="Date" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadlineField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        </GridPane>
    </content>

</DialogPane>
